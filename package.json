{
  "name": "sdos-project",
  "version": "1.0.0",
  "description": "Backend for ERP System (Hindu Rao Hospital)",
  "main": "src/server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "clean": "rimraf dist",
    "copy-assets": "cpr src/templates dist/templates -o",
    "build:ts": "tsc",
    "build": "npm-run-all clean build:ts copy-assets",
    "test": "jest --detectOpenHandles",
    "migrate": "typeorm-ts-node-commonjs migration:run -d src/db/data-source.ts",
    "sync-database": "ts-node src/db/sync-database.ts",
    "seed": "npm run migrate && ts-node src/db/seeds/index.ts",
    "test:watch": "jest --watch",
    "migrate:test": "NODE_ENV=test typeorm-ts-node-commonjs migration:run -d src/db/data-source.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/db/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/db/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/db/data-source.ts",
    "test:setup": "cross-env NODE_ENV=test ts-node src/db/setup-test-db.ts",
    "pretest": "npm run test:setup"
  },
  "author": "Kartikeya Chhikara",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.772.0",
    "@aws-sdk/s3-request-presigner": "^3.772.0",
    "@sendgrid/mail": "^7.7.0",
    "aws-sdk": "^2.1510.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "sdos-project": "file:",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.13.10",
    "@types/uuid": "^9.0.7",
    "cpr": "^3.0.1",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
